<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsActivityText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="PanelHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/padding_size</item>
        <item name="android:layout_marginTop">@dimen/padding_size</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="CustomEditText">
        <item name="android:lines">1</item>
        <item name="android:paddingStart">@dimen/icon_padding</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
</resources>

<!--parent="Widget.MaterialComponents.Button.UnelevatedButton"-->