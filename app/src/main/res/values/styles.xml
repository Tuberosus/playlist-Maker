<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsText">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="SettingsHeaderText">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/padding_size</item>
        <item name="android:layout_marginTop">@dimen/padding_size</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>
</resources>

