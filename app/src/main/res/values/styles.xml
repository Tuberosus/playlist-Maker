<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsActivityText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="PanelHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/padding_size</item>
        <item name="android:layout_marginTop">@dimen/padding_size</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="CustomEditText">
        <item name="android:lines">1</item>
        <item name="android:paddingStart">@dimen/icon_padding</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <!--Song card style-->
    <style name="FirstLineSongText">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SecondLineSongText">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RefreshButtonSearch">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/padding_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SearchErrorAndHistory">
        <item name="android:textSize">@dimen/text_error_size</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/padding_size</item>
    </style>

    <!-- Стили аудиоплеера -->
    <style name="TextInfo">
        <item name="android:textSize">@dimen/textInfoInPlayer</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Info">
        <item name="android:textSize">@dimen/textInfoInPlayer</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
        <item name="itemTextColor">?attr/colorOnSecondary</item>
    </style>

    <style name="BottomSheetHeaderText">
        <item name="android:textSize">@dimen/text_error_size</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="InputEditTextCustomStroke" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/color_input_box_stroke</item>
        <item name="hintTextColor">@color/yp_blue</item>
    </style>

    <style name="PlaylistNameText">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/playlist_text_size</item>
        <item name="itemTextColor">?attr/colorOnSecondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PopUpDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorOnPrimary">@color/yp_blue</item>
    </style>

    <!-- Стили экрана плейлиста -->
    <style name="PlaylistTextStyleSecondLine">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="BottomSheetTextLines">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="BottomSheetPlaylistName">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="BottomSheetPlaylistDescription">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

</resources>

<!--parent="Widget.MaterialComponents.Button.UnelevatedButton"-->