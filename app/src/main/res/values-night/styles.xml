        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_size</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/gray</item>
