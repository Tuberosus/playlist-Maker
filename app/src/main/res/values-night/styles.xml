<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsHeaderText">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="CustomEditText">
        <item name="android:lines">1</item>
        <item name="android:paddingStart">@dimen/icon_padding</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
        <item name="android:drawableTint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <!--Song card style-->
    <style name="FirstLineSongText">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SecondLineSongText">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>